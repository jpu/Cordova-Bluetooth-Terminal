<?xml version='1.0' encoding='utf-8'?>
<widget id="com.hakety.jpu.storm32_droid_control" version="1.0.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Storm32 Droid Control</name>
    <description>Android app for controlling a SToRM32 gimbal via Bluetooth</description>
    <author email="jpu@hakety.com" href="https://hakety.com">jpu</author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <engine name="android" spec="^6.2.3" />
    <plugin name="cordova-plugin-bluetooth-serial" spec="^0.4.7" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
</widget>
